@{
    int number = Convert.ToInt32(Context.Session.GetString("number") ?? "0");
}

<div class="d-flex justify-content-sm-between">
    <h1>Welcome @Context.Session.GetString("player")</h1>
    <form asp-action="Logout">
        <button>Log out</button>
    </form>
</div>
<div>
    <h1>@number</h1>
    <div class="d-flex grid gap-3">
        <div style="width: 100px; height: 100px; background-color: yellow;">
            <form asp-action="AddOne" method="post">
                <button type="submit">+1</button>
            </form>
        </div>
        <div style="width: 100px; height: 100px; background-color: Blue;">
            <form asp-action="SubtractOne" method="post">
                <button type="submit">-1</button>
            </form>
        </div>
    </div>
    <div class="d-flex grid gap-3">
        <div style="width: 100px; height: 100px; background-color: red;">
            <form asp-action="MultiplyByTwo" method="post">
                <button type="submit">x2</button>
            </form>
        </div>
        <div style="width: 100px; height: 100px; background-color: Green;">
            <form asp-action="AddRandom" method="post">
                <button type="submit">+Random</button>
            </form>
        </div>
    </div>
</div>
